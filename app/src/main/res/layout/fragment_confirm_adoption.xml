    <TextView
        android:id="@+id/tvPendingAdoptionAdopterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvPendingAdoptionStaticAdopterName"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingAdoptionStaticAdopterDetails" />

    <TextView
        android:id="@+id/tvPendingAdoptionAdopterMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mobile_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvPendingAdoptionStaticAdopterMobileNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingAdoptionAdopterName" />

    <TextView
        android:id="@+id/tvPendingAdoptionAdopterAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvPendingAdoptionStaticAdopterAddress"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingAdoptionAdopterMobileNumber" />

    <CheckBox
        android:id="@+id/cbPendingAdoptionAdopterEnoughSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enough_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingAdoptionStaticAdopterAddress" />

    <CheckBox
        android:id="@+id/cbPendingAdoptionAdopterDogHouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dog_house"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbPendingAdoptionAdopterEnoughSpace" />

    <CheckBox
        android:id="@+id/cbPendingAdoptionAdopterAnyAllergic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/any_allergic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbPendingAdoptionAdopterDogHouse" />

    <Button
        android:id="@+id/btnPendingAdopterApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/approve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbPendingAdoptionAdopterAnyAllergic" />

    <Button
        android:id="@+id/btnPendingAdoptionDeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reject"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbPendingAdoptionAdopterAnyAllergic" />

</androidx.constraintlayout.widget.ConstraintLayout>