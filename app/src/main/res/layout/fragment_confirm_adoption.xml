<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ConfirmAdoptionFragment">



    <ImageView
        android:id="@+id/ivPendingAdoptionPetImage"
        android:layout_width="413dp"
        android:layout_height="256dp"
        android:layout_centerVertical="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPendingAdoptionPetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:text="Pet Name"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPendingAdoptionPetImage" />

    <TextView
        android:id="@+id/tvPendingAdoptionPetId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pet ID"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvPendingAdoptionPetName"
        app:layout_constraintTop_toBottomOf="@+id/ivPendingAdoptionPetImage" />

    <MultiAutoCompleteTextView
        android:id="@+id/mltvPendingAdoptionPetDescription"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:text="Pet Description"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingAdoptionPetName" />

    <TextView
        android:id="@+id/tvPendingAdoptionStaticAdopterDetails"
        android:layout_width="134dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:text="@string/adopter_details"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mltvPendingAdoptionPetDescription" />

    <TextView
        android:id="@+id/tvPendingAdoptionStaticAdopterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingAdoptionStaticAdopterDetails" />

    <TextView
        android:id="@+id/tvPendingAdoptionStaticAdopterMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mobile_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingAdoptionStaticAdopterName" />

    <TextView
        android:id="@+id/tvPendingAdoptionStaticAdopterAddress"
        android:layout_width="57dp"
        android:layout_height="17dp"
        android:text="@string/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingAdoptionStaticAdopterMobileNumber" />

